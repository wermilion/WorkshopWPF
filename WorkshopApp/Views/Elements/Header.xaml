<UserControl x:Class="WorkshopApp.Views.Elements.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkshopApp.Views.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Style.Setters>
                <Setter Property="MinWidth"  Value="100"/>
                <Setter Property="Margin"  Value="5"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnUsers" Content="Пользователи" />
            <Button x:Name="BtnOrders" Content="Заказы" />
            <Button x:Name="BtnStatuses" Content="Статусы заказов" />
            <Button x:Name="BtnTypes" Content="Типы заказов" />
        </StackPanel>
    </Grid>
</UserControl>
